<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.navercorp.pinpoint.web.dao.mysql.MysqlAgentHierarchyDao">

    <select id="selectServices" resultType="ServiceIndex">
        SELECT * FROM service
    </select>

    <select id="selectApplications" parameterType="Long" resultType="ApplicationIndex">
        SELECT a.* FROM service_has_application sa
            INNER JOIN application a ON sa.application_id = a.id
            WHERE sa.service_id = #{value}
    </select>

    <select id="selectAgents" parameterType="Long" resultType="AgentIndex">
        SELECT a.* FROM application_has_agent aha
            INNER JOIN agent a ON aha.agent_id = a.id
            WHERE aha.application_id = #{value}
    </select>

</mapper>
